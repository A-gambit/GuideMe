.post
  &-title
    font-size 60px
    text-align center
    display block
    color #fff
    position relative
    top 50%
    transform translateY(-50%)
    &-wrapper
      height 500px
      position absolute
      width 100%
      z-index 1
  &-img
    width 100%
    &-wrapper
      width 100%
      height 500px
      overflow hidden
      filter grayscale(50%)
  &-text
    font-size 22px
    line-height 33px
    &-wrapper
      width 55%
      min-width 400px
      margin 100px auto
    p
      margin 40px 0
  &-author
    position relative
    width 200px
    margin 0 auto
    top -100px
  &-avatar
    width 200px
    height 200px
    border-radius 200px
    margin 0 auto
    display block
    border 6px solid #fff
  &-name
    display block
    text-align center
    font-size 21px
    margin 10px 0
  &-link
    width 350px
    height 1px
    background #dedede
    margin -45px auto -20px auto
