@import '../../components/base/utils.styl'

.index
  &-banner
    icon-helper('./img/index-bg.jpg')
    width 100%
    background-size 100%
    background-repeat no-repeat
    &-wrapper
      width 100%
      height 400px
      overflow hidden
      filter grayscale(100%)
  &-main
    width 60%
    margin 90px auto
  &-card
    width 100%
    overflow hidden
    margin 120px 0
    height 580px
  &-img
    height 110%
    position relative
    left -26%
    &-wrapper
      width 100%
      height 580px
  &-title
    font-size 24px
    text-transform: uppercase
    box-sizing content-box
    font-weight 400
    &-wrapper
      position absolute
      max-width 30%
      padding 20px
      background rgba(255, 255, 255, 1)
      z-index 1
  &-avatar
    width 150px
    height 150px
    border-radius 150px
    transform translateY(-50%)
    position absolute
    z-index 2
    border 6px solid #fff
  &-author
    float right
    margin-right 240px
    &-name
      font-size 21px
      position absolute
      margin-top 15px
      transform translateX(-105%)