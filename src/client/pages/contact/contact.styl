@import '../../components/base/utils.styl'

.contact
  &-title
    color #5e5d5d
    font-size 30px
    font-weight 400
    text-transform uppercase
    display block
    letter-spacing 0.5px
    text-align center
    margin-bottom 20px
  &-content
    width 500px
    margin 150px auto
  &-page
    display block
    width 100%
    height 100%
    overflow-x hidden
  &-bg
    icon-helper('./img/contact-bg.jpg')
    height 100%
    background-position-y 20%
    z-index -1
    position absolute
    background-repeat no-repeat
    width 100%