.contact-result
  &-contacts
    margin 0 auto
    padding-top 90px
    width 900px
    &-item
      width 400px
      padding 7px 40px 7px 10px
      cursor pointer
      &:hover
        border-bottom 1px solid #edeeee
        padding-bottom 6px
    &-name
      font-size 21px
      display block
      &-main
        font-size 24px
        display block
    &-email
      font-size 12px
      display block
    &-date
      font-size 12px
      float right
      padding-top 12px
      &-bottom
        font-size 14px
    &-text
      display block
      margin 25px 0
      line-height 24px
    &-list
      display inline-block
      width 400px
      vertical-align top
      padding 10px 0
      border-right 1px solid #edeeee
    &-message
      display inline-block
      width 480px
      padding  22px 0 0 30px
      vertical-align top

